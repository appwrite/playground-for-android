<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.appwrite.MainActivity">

    <Button
        android:id="@+id/get_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/get_data_btn_margin"
        android:clickable="true"
        android:text="@string/get_data"
        android:background="@drawable/button_style"
        android:theme="@style/AppTheme.AccentButton" />

    <Button
        android:id="@+id/logIn_logOut_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/get_data_btn_margin"
        android:clickable="true"
        android:text="@string/login"
        android:background="@drawable/button_style"
        android:theme="@style/AppTheme.AccentButton" />

    <ScrollView
        android:layout_below="@id/get_data_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/response_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/response_data_text_size"
                android:text="@string/no_data_loaded"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>